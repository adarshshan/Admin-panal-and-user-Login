<%-include('adm/header')-%>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-center mt-2">
                        <div class="container w-25 border bg-light rounded pt-1">
                          <form action="/route/add" method="post">
                            <div class="text-center">
                              <h1 class="text-primary fs-1">Add user Details</h1>
                               <p>Please fill in this form to add the details</p>
                              <hr>
                    
                              
                              <input class="rounded border px-4 py-2 my-1 border-primary" autocomplete="off" type="text" placeholder="Enter your Full name" name="name" id="name" required><br>
                    
                              
                              <input class="rounded border px-4 py-2 my-1 border-primary" type="text" placeholder="Enter Email Address" name="email" id="email" required><br>
                    
                    
                              <input class="rounded border px-4 py-2 my-1 border-primary" type="number" placeholder="Enter Mobile number" name="phone" id="phone" required><br>
                    
                             
                              <input class="rounded border px-4 py-2 my-1 border-primary" type="password" placeholder="Enter Password" name="password" id="password" required><br>
                              <hr>
                    
                    
                              <button type="submit" class="btn btn-primary px-5 fs-4 mb-3">Add Details</button>
                              <div class="container signin">
                              </div>
                            </div>
                    
                    
                    
                          </form>
                        </div>
                      </div>
                </div>
            </div>
        </div>
<%-include('adm/footer')-%>