<%-include('adm/header')-%>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-center mt-2">
                        <div class="container w-25 border bg-light rounded pt-1">
                          <form action="/route/update/<%= collection._id %>" method="post">
                            <div class="text-center">
                              <h1 class="text-primary fs-3">Update User's Details</h1>
                              <hr>
                    
                              
                              <input class="rounded border px-4 py-2 my-1 border-primary" value="<%= collection.name %>" type="text" placeholder="Enter your Full name" name="name" id="name"><br>
                    
                              
                              <input class="rounded border px-4 py-2 my-1 border-primary" type="text" value="<%= collection.email %>" placeholder="Enter Email Address" name="email" id="email"><br>
                    
                    
                              <input class="rounded border px-4 py-2 my-1 border-primary" type="number" value="<%= collection.phone %>" placeholder="Enter Mobile number" name="phone" id="phone"><br>
                    
                             
                              <input class="rounded border px-4 py-2 my-1 border-primary" type="password" value="<%= collection.password %>" placeholder="Enter Password" name="password" id="password"><br>
                              <hr>
                    
                    
                              <button type="submit" class="btn btn-primary px-5 fs-5 mb-3">Update Details</button>
                              <div class="container signin">
                              </div>
                            </div>
                    
                    
                    
                          </form>
                        </div>
                      </div>
                </div>
            </div>
        </div>
<%-include('adm/footer')-%>