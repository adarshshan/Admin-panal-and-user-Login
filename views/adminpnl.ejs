<%-include('adm/header')-%>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="table-responsive mt-3">
                        <% if(data != ''){ %>
                            <table class="table table-striped text-center table-light">
                                <thead>
                                    <tr class="">
                                        <th>ID</th>
                                        <th>NAME</th>
                                        <th>EMAIL</th>
                                        <th>PHONE</th>
                                        <th>PASSWORD</th>
                                        <th>ACTION</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% data.forEach((row,index)=>{ %>
                                        <tr>
                                            <td><%= index + 1 %></td>
                                            <td><%= row.name %></td>
                                            <td><%= row.email %></td>
                                            <td><%= row.phone %></td>
                                            <td><%= row.password %></td>
                                            <td>
                                                <a href="/route/edit/<%= row._id %>" class="text-primary"><i class="fa-regular fa-pen-to-square"></i></a>
                                                <a href="/route/delete/<%= row._id %>" class="text-danger ms-4"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                            <% }else{ %>
                                <div class="text-center text-secondary mt-5">
                                    <h1>No users found in the Database</h1>
                                </div>
                                <% } %>
                        
                    </div>
                </div>
            </div>
        </div>
<%-include('adm/footer')-%>
    